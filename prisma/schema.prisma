generator client {
    provider = "prisma-client"
    output   = "../src/generated/prisma"
}

datasource db {
    provider = "postgresql"
}

enum Role {
    CREDSURE_ADMIN
    SUZUKI_ADMIN
    SUPER_ADMIN
}

enum ContentStatus {
    DRAFT
    PUBLISHED
}

enum CarAvailability {
    AVAILABLE
    NOT_AVAILABLE
    COMING_SOON
}

enum FinanceApplicationStatus {
    PENDING
    UNDER_REVIEW
    APPROVED
    REJECTED
}

model AdminUser {
    id                     String                @id @default(cuid())
    email                  String                @unique
    password               String
    passwordResetTokenHash String?
    passwordResetExpiresAt DateTime?
    role                   Role
    isActive               Boolean               @default(true)
    createdAt              DateTime              @default(now())
    updatedAt              DateTime              @updatedAt
    activityLogs           ActivityLog[]
    interestRateChanges    InterestRateHistory[]
}

model InterestRateConfig {
    id            String   @id @default(cuid())
    annualRatePct Decimal  @db.Decimal(5, 2)
    isPublished   Boolean  @default(true)
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt
}

model InterestRateHistory {
    id              String     @id @default(cuid())
    previousRatePct Decimal?   @db.Decimal(5, 2)
    newRatePct      Decimal    @db.Decimal(5, 2)
    changedById     String?
    changedByRole   Role?
    createdAt       DateTime   @default(now())
    changedBy       AdminUser? @relation(fields: [changedById], references: [id], onDelete: SetNull)

    @@index([createdAt])
    @@index([changedById])
}

model LoanTenureOption {
    id          String   @id @default(cuid())
    months      Int      @unique
    isPublished Boolean  @default(true)
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}

model CalculatorConfig {
    id               String   @id @default(cuid())
    downPaymentPct   Decimal  @db.Decimal(5, 2)
    processingFeePct Decimal  @db.Decimal(5, 2)
    insuranceCost    Decimal  @db.Decimal(12, 2)
    isPublished      Boolean  @default(true)
    createdAt        DateTime @default(now())
    updatedAt        DateTime @updatedAt
}

model FinancialContent {
    id          String        @id @default(cuid())
    title       String
    body        String
    disclaimer  String?
    status      ContentStatus @default(DRAFT)
    publishedAt DateTime?
    createdAt   DateTime      @default(now())
    updatedAt   DateTime      @updatedAt
}

model Car {
    id             String             @id @default(cuid())
    name           String
    category       String
    modelYear      Int
    basePrice      Decimal            @db.Decimal(12, 2)
    variant        String?
    description    String?
    availability   CarAvailability    @default(AVAILABLE)
    isFeatured     Boolean            @default(false)
    createdAt      DateTime           @default(now())
    updatedAt      DateTime           @updatedAt
    images         CarImage[]
    specifications CarSpecification[]
    financeApplications FinanceApplication[]
}

model CarImage {
    id        String   @id @default(cuid())
    carId     String
    imageUrl  String
    position  Int
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    car       Car      @relation(fields: [carId], references: [id], onDelete: Cascade)

    @@unique([carId, position])
}

model CarSpecification {
    id           String   @id @default(cuid())
    carId        String
    engine       String
    transmission String
    fuelType     String
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt
    car          Car      @relation(fields: [carId], references: [id], onDelete: Cascade)
}

model ActivityLog {
    id         String     @id @default(cuid())
    actorId    String?
    actorRole  Role?
    action     String
    entityType String
    entityId   String?
    metadata   Json?
    createdAt  DateTime   @default(now())
    actor      AdminUser? @relation(fields: [actorId], references: [id], onDelete: SetNull)
}

model FinanceApplication {
    id                        String   @id @default(cuid())
    fullName                  String
    phoneNumber               String
    email                     String
    employmentStatus          String
    estimatedNetMonthlyIncome Decimal  @db.Decimal(12, 2)
    carId                     String?
    selectedVehicle           String?
    vehicleAmount             Decimal? @db.Decimal(12, 2)
    downPayment               Decimal? @db.Decimal(12, 2)
    monthlyPayment            Decimal? @db.Decimal(12, 2)
    status                    FinanceApplicationStatus @default(PENDING)
    consentGiven              Boolean
    createdAt                 DateTime @default(now())
    updatedAt                 DateTime @updatedAt
    car                       Car?     @relation(fields: [carId], references: [id], onDelete: SetNull)

    @@index([createdAt])
    @@index([email])
    @@index([status])
    @@index([carId])
}
